{
  "manifest_version": 3,
  "name": "Dark Reader Pro",
  "version": "4.1",
  "description": "Simple global dark mode with brightness and blue light filter.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "128": "icon.png" }
  },
  "background": { "service_worker": "background.js" },
  "icons": { "128": "icon.png" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "commands": {
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Toggle dark mode globally"
    }
  }
}

